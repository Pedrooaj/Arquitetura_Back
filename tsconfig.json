{
  "compilerOptions": {
    "target": "ES2020",
    "module": "CommonJS",
    "outDir": "./dist",                         // Os arquivos compilados v√£o para /dist
    "strict": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "node",
    "skipLibCheck": true
  },
  "include": ["index.ts", "src"],                      // Inclui o index.ts na raiz
  "exclude": ["node_modules", "dist"]
}
